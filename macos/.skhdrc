shift + cmd - 1 : "${HOME}"/.config/yabai/script/create_or_focus.sh 1
shift + cmd - 2 : "${HOME}"/.config/yabai/script/create_or_focus.sh 2
shift + cmd - 3 : "${HOME}"/.config/yabai/script/create_or_focus.sh 3
shift + cmd - 4 : "${HOME}"/.config/yabai/script/create_or_focus.sh 4
shift + cmd - 5 : "${HOME}"/.config/yabai/script/create_or_focus.sh 5
shift + cmd - 6 : "${HOME}"/.config/yabai/script/create_or_focus.sh 6
shift + cmd - 7 : "${HOME}"/.config/yabai/script/create_or_focus.sh 7
shift + cmd - 8 : "${HOME}"/.config/yabai/script/create_or_focus.sh 8
shift + cmd - 9 : "${HOME}"/.config/yabai/script/create_or_focus.sh 9

# switch space
cmd - tab : yabai -m display --focus recent
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4

cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9
cmd - 0 : yabai -m space --focus 10

