include ./theme.conf
# font 
font_family      FiraCode Nerd Font
bold_font        FiraCode Nerd Font Mono Bold
italic_font      FiraCode Nerd Font Mono Italic
bold_italic_font FiraCode Nerd Font Mono Bold Italic
font_size 16.0
symbol_map U+F0001-U+F1af0 DroidSansM Nerd Font
symbol_map U+F8FF,U+100000-U+1018C7 DroidSansM Nerd Font

scrollback_lines 20000

enable_audio_bell no

cursor_blink_interval 0
macos_quit_when_last_window_closed no
macos_colorspace default
repaint_delay 8
input_delay 1
resize_draw_strategy blank
remember_window_size no
resize_debounce_time 0.001

# kitty style
hide_window_decorations yes
background_opacity 0.9
background_blur 16


tab_bar_edge bottom
tab_bar_style powerline
tab_powerline_style slanted
tab_activity_symbol ï‘„
tab_title_max_length 25
tab_title_template "{fmt.fg.red}{bell_symbol}{fmt.fg.tab} {index}: {tab.active_oldest_exe} {activity_symbol}"


